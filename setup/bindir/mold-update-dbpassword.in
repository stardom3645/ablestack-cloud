echo " ### [START] Start Changing the DB Password ### "

LOGFILE=/tmp/mold-update-dbpassword.log
KEYENC_FILE="/etc/cloudstack/management/key.enc"
DB_FILE="/etc/cloudstack/management/db.properties"
jarfile='/usr/share/cloudstack-common/lib/cloudstack-utils.jar'
re1="[0-9]" # 숫자
re2="[a-z]" # 영문 소문자
re3="[A-Z]" # 영문 대문자
re4="[~\!@#$%^&*()]" # 특수문자
keyboard="qwertyuiop asdfghjkl zxcvbnm 1234567890 poiuytrewq lkjhgfdsa mnbvcxz 0987654321" # 키보드 연속 문자
key=""

function createkey()
{
  # Enter the password required when creating kek
  echo " ### Enter the required password when generating a key encryption key(KEK).(more than 4 characters) ### "

  while :
  do
    echo -n "KEK PASSWORD : "
    read -s kek_pass
    echo " "


    if [ -z $kek_pass ] || [ ${#kek_pass} -lt 4 ]
    then
      echo "[Alert] Please check your password again.(more than 4 characters)"
    else
      break
    fi
  done

  # # Create kek
  # kek=$(openssl kdf -keylen 32 -kdfopt digest:SHA2-256 -kdfopt pass:$kek_pass -kdfopt salt:$(cat kek.salt) -kdfopt iter:100000 PBKDF2 | base64)

  # # Generate audit log to determine whether KEK is successful
  # if [[ $? == 0 ]]; then
  #     echo " ### [ KEK Creation Status : Success ] ### " 
  #     echo $kek >> kek
  # else
  #     echo " ### [ KEK Creation Status : Fail ] ### " 
  #     exit 1
  # fi

  # Generate key by decrypting key.enc
  key=$(openssl enc -aria-256-cbc -a -d -pbkdf2 -k $kek_pass -saltlen 16 -md sha256 -iter 100000 -in key.enc)

  # openssl enc -d -aria-256-ctr -a -kfile kek -iter 100000 -in key.enc -out key

  # Generate audit log for successful decryption operation
  if [[ $? == 0 ]]; then
      echo " ### [ Decryption Operation Status(key.enc => key) : Success ] ### " 
  else
      echo " ### [ Decryption Operation Status(key.enc => key) : Fail ] ### " 
      exit 1
  fi
}

check_if_svc_active() {
  svc_name=$1
  systemctl is-active $svc_name -q
  if [ $? -eq 0 ];then
    echo "service $svc_name is still active. Please stop it and retry." | tee -a ${LOGFILE}
    exit 1
  fi
}

if [ "$1" != "" ] && [ "$1" != "-h" ] && [ "$1" != "--help" ];then
  check_if_svc_active "cloudstack-management"
  check_if_svc_active "cloudstack-usage"
fi

# java -classpath /etc/cloudstack/management:/usr/share/cloudstack-management/lib/* \
#   com.cloud.utils.crypt.EncryptionSecretKeyChanger \
#   "$@" \
#   > >(tee -a ${LOGFILE}) 2> >(tee -a ${LOGFILE} >/dev/null)

cd /etc/cloudstack/management

if [ -e $KEYENC_FILE ]; then
	createkey
fi

echo " ### Enter the Current DB Password ### "
while :
do
  echo -n "Current Password : "
  read -s curdbpass
  echo " "

  mysql -uroot -p$curdbpass cloud -e "select 1 from dual"
  #현재 비빌번호가 맞는지 확인
  if [ $? -eq 0 ];then 
    echo " ### Mysql current password OK  ### " 

    while :
    do
      echo -n "New Password : "
      read -s newpass
      echo " "

      echo -n "New Password Check : "
      read -s newpass_check
      echo " "

      #동일한 문자·숫자의 연속적인 반복입력 금지(2회이상)
      echo $newpass | grep "\([0-9a-zA-Z~\!@#$%^&*()]\)\1" > /dev/null
      re5=$?

      #키보드상의 연속된 문자 또는 숫자의 순차적 입력금지(4개이상)
      t_pass=$(echo "$newpass" | tr '[:upper:]' '[:lower:]')
      for ((i = 0 ; i <= ${#t_pass}-3 ; i++))
      do
        split_pass_str=$(echo ${t_pass:$i:4})
        for keyboard_str in $keyboard
        do
          if [[ "$keyboard_str" =~ $split_pass_str ]]; then
            re6=1
            break 2
          else
            re6=0
          fi
        done
      done

      #9자리 이상의 길이 확보  #숫자, 대문자(영문), 소문자(영문), 특수문자가 각 1개 이상 포함 # 사용자 계정(ID)과 동일한 패스워드 설정 금지, 9~15자리 이내
      if [ "$newpass" == "$newpass_check" ] && #패스워드 확인 체크
          [[ "$newpass" =~ $re1 ]] && # 숫자
          [[ "$newpass" =~ $re2 ]] && # 소문자(영문)
          [[ "$newpass" =~ $re3 ]] && # 대문자(영문) 
          [[ "$newpass" =~ $re4 ]] && # 특수문자
          [[ $re5 -eq 1 ]] && #동일한 문자·숫자의 연속적인 반복입력 금지(2회 이상)
          [[ $re6 -eq 0 ]] && #키보드상의 연속된 문자 또는 숫자의 순차적 입력금지(4개이상)
          [[ ${#newpass} -ge 9 ]] && # 9자이상
          [[ ${#newpass} -le 15 ]] && # 15자이하
          [ "$newpass" != "$curdbpass" ]; then #직전 사용된 패스워드 재사용 금지
        echo " ### Mysql current password OK  ### " 
        break 2
      else
        echo "[Invalid Password] Please check your new DB password again."
      fi
    done
  else
    echo "[Invalid Password] Please check your Currnet DB password again." 
  fi
done

# Decrypting db.properties.enc > db.properties
openssl enc -aria-256-cbc -a -d -pbkdf2 -k $kek_pass -saltlen 16 -md sha256 -iter 100000 -in db.properties.enc -out db.properties
curDbCloudEncPassword=$(sed '/^\#/d' $DB_FILE | grep 'db.cloud.password'  | tail -n 1 | cut -d "=" -f2- | sed 's/^[[:space:]]*//;s/[[:space:]]*$//'i | sed 's/^ENC(\(.*\))/\1/' | sed 's/\//\\\//g')
curDbUsageEncPassword=$(sed '/^\#/d' $DB_FILE | grep 'db.usage.password'  | tail -n 1 | cut -d "=" -f2- | sed 's/^[[:space:]]*//;s/[[:space:]]*$//'i | sed 's/^ENC(\(.*\))/\1/' | sed 's/\//\\\//g')
encVersion=$(sed '/^\#/d' $DB_FILE | grep 'db.cloud.encryptor.version'  | tail -n 1 | cut -d "=" -f2-)

# Decrypting db.properties.enc > db.properties
# dbprop=$(openssl enc -aria-256-cbc -a -d -pbkdf2 -k $kek_pass -saltlen 16 -md sha256 -iter 100000 -in db.properties.enc)

# for i in ${dbprop[*]}
# do 
#   if [[ "$i" == *db.cloud.password* ]]; then
#     curDbCloudEncPassword=$(echo $i | tail -n 1 | cut -d "=" -f2- | sed 's/^[[:space:]]*//;s/[[:space:]]*$//'i | sed 's/^ENC(\(.*\))/\1/' | sed 's/\//\\\//g')
#   elif [[ "$i" == *db.usage.password* ]]; then
#     curDbUsageEncPassword=$(echo $i | tail -n 1 | cut -d "=" -f2- | sed 's/^[[:space:]]*//;s/[[:space:]]*$//'i | sed 's/^ENC(\(.*\))/\1/' | sed 's/\//\\\//g')
#   elif [[ "$i" == *db.cloud.encryptor.version* ]]; then
#     encVersion=$(echo $i | tail -n 1 | cut -d "=" -f2-)
#   fi
# done

# echo "curDbCloudEncPassword :: "$curDbCloudEncPassword
# echo "curDbUsageEncPassword :: "$curDbUsageEncPassword
# echo "encVersion :: "$encVersion
# echo "newpass :: "$newpass
# echo "key :: "$key

if [ -n "$key" ]; then
  newDbCloudEncPassword=$(java -classpath $jarfile com.cloud.utils.crypt.EncryptionCLI -i $newpass -p $key $encVersion | sed 's/\//\\\//g')
  # echo "newDbCloudEncPassword :: "$newDbCloudEncPassword

  newDbUsageEncPassword=$(java -classpath $jarfile com.cloud.utils.crypt.EncryptionCLI -i $newpass -p $key $encVersion | sed 's/\//\\\//g')
  # echo "newDbUsageEncPassword :: "$newDbUsageEncPassword

  if [ ! $newDbCloudEncPassword ] || [ ! $newDbUsageEncPassword ]
  then
    echo " ### Failed to Encrypt DB Password  ### " 
    exit 1
  else
    sed -i "s/$curDbCloudEncPassword/$newDbCloudEncPassword/g" $DB_FILE
    sed -i "s/$curDbUsageEncPassword/$newDbUsageEncPassword/g" $DB_FILE
    openssl enc -aria-256-cbc -a -pbkdf2 -k $kek_pass -saltlen 16 -md sha256 -iter 100000 -in db.properties -out db.properties.enc
    res=$?
    if [ $res -eq 0 ];then
      rm -rf $DB_FILE
      echo " ### DB properties root, cloud password change completed ### " 
    else
      echo " ### DB properties root, cloud password change failed ### "
      exit 1
    fi
  fi
else
  echo " ### Undefined key. Check please... ### "
  exit 1
fi

mysql -uroot -p$curdbpass -e "ALTER USER 'cloud'@'localhost' IDENTIFIED BY '$newpass'"
mysql -uroot -p$curdbpass -e "ALTER USER 'root'@'localhost' IDENTIFIED BY '$newpass'"

res=$?
if [ $res -eq 0 ];then
   echo " ### Mysql root, cloud password change completed ### " 
else
   echo " ### Mysql root, cloud password change failed ### "
   exit 1
fi



# override variable to 0 and 1

for var in {1..5} ; do echo 01010101 > db.properties ; done

rm -rf db.properties


for var in {1..5}
do 
  key=01010101
  newDbCloudEncPassword=01010101
  newDbUsageEncPassword=01010101
  kek_pass=01010101
  newpass=01010101
  curdbpass=01010101
  newpass_check=01010101
done


echo " ### [FINISH] DB Password Change Completed ### "

exit 0
